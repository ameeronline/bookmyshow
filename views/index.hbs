<div id="carouselExampleControls" class="movie-carousal carousel carousel-dark slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="movie-carousal carousel-item active">
            <div class="card-wrapper container-sm d-flex  justify-content-around">
                {{#each moviesTrendingOne}}
                <a href="/movie-info-trending-one/{{this._id}}">
                    <div class="card">
                        <img src="/images/movies-trending-one/{{this._id}}.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
