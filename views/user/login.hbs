<section>
	<div class="container mt-4">
		<div class="row col-md-6 mt-5">
			<h4 class="text-center mb-3"><b>Already have a account?</b></h4>
			<h4 class="text-center">Login</h4>
			<form action="/login" method="post">
				{{#if LoginErr}}
				<div class="alert alert-danger" role="alert">
					Invalid Email ID or Password
				</div>
				{{/if}}
				<div class="form-group">
					<label for="">Email ID</label>
					<input type="email" name="email" class="form-control" id="" placeholder="">
				</div>
				<div class="form-group">
					<label for="">Password</label>
					<input type="password" name="password" class="form-control" id="" placeholder="">
				</div>
				<div class="text-center">
					<button type="submit" class="btn btn-danger mt-5 mb-3">Login</button>
				</div>
			</form>
			<div class="login-signup">
				<p>Don't have an account? <a href="/sign-up">Sign up</a></p>
			</div>
		</div>
	</div>
</section>